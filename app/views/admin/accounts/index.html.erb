<h1>Accounts</h1>

<div id="accounts">
  <% @accounts.each do |account| %>
    <p>
      <strong>Number:</strong>
      <%= account.number_with_digit %> |
      <%= link_to "Show this account", admin_account_path(account) %>
    </p>
  <% end %>
</div>

