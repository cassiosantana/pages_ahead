<%= form_with(model: [:admin, supplier]) do |form| %>
  <% if supplier.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
        <% supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%=form.label :cnpj, style: "display: block" %>
    <%= form.text_field :cnpj %>
  </div>

  <br>

  <% if @supplier.persisted? %>
    <div>
      <div>
        <strong>Account:</strong>
        <%= @supplier.account_with_digit %>
      </div>
      <div>
        <em>It is not possible to change the account.</em>
      </div>
    </div>

    <br>

    <div>
      <strong>Parts:</strong>
      <div>
        <em>It is not possible to change the parts.</em>
      </div>
      <ul>
        <% supplier.parts.each do |part| %>
          <li><%= part.name %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
