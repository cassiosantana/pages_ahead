<div id="<%= dom_id author %>">
  <p>
    <strong>Name:</strong> <%= author.name %>
  </p>

  <p>
    <strong>Cpf:</strong> <%= author.cpf %>
  </p>

  <div>
    <p><strong>Books:</strong></p>
    <ul>
      <% author.books.each do |book| %>
        <li><%= book.title %></li>
      <% end %>
    </ul>
  </div>
</div>
