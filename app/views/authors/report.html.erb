<h1 class="reports-h1">Author Report</h1>

<section class="report-section">
  <h2>Author</h2>
  <table class="reports-table table-section">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>CPF</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Quantity of Books</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= @author.id %></td>
      <td><%= @author.name %></td>
      <td><%= @author.cpf %></td>
      <td><%= @author.created_at %></td>
      <td><%= @author.updated_at %></td>
      <td><%= @author.books.count %></td>
    </tr>
    </tbody>
  </table>

  <h3>Books</h3>
  <table class="reports-table table-section">
    <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>ISBN</th>
      <th>Published at</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Author Id</th>
    </tr>
    </thead>
    <tbody>
    <% @author.books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.published_at %></td>
        <td><%= book.created_at %></td>
        <td><%= book.updated_at %></td>
        <td><%= book.author_id %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<div>
  <%= link_to "Back to authors", authors_path %>
</div>
